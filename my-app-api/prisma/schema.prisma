generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PhoneNumber {
  id               Int        @id @default(autoincrement())
  number           String     @unique
  numberOfSearches Int
  comments         Comments[]
}

model Comments {
  id            Int          @id @default(autoincrement())
  phoneNumber   PhoneNumber? @relation(fields: [phoneNumberId], references: [id])
  phoneNumberId Int?
  text          String
}
